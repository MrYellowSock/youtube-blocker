{
	"manifest_version": 3,
	"name": "YouTube Visit Logger & Filter",
	"version": "1.1",
	"description": "Logs every YouTube visit and blocks videos flagged by your filtering API.",
	"permissions": [
		"webNavigation"
	],
	"host_permissions": [
		"*://*.youtube.com/*",
		"*://youtu.be/*",
		"https://your.server/*"
	],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": [
				"*://*.youtube.com/watch*",
				"*://*.youtube.com/shorts/*",
				"*://youtu.be/*"
			],
			"js": [
				"content.js"
			],
			"run_at": "document_start"
		}
	],
	"icons": {
		"224": "ICON.png"
	}
}
